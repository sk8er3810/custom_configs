set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set history=500
syntax on
"set number
set ruler
"set textwidth=72
set nocp
set bs=2
" set shortcut for edit in hex mode
"nnoremap <C-H> :Hexmode<CR>
"inoremap <C-H> <ESC>:Hexmode<CR>
"vnoremap <C-H> :<C-U>Hexmode<CR>
vmap <leader>cc :s/^/#/<cr>
vmap <leader>co :s/^#//<cr>
